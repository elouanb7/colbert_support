{% extends 'base.html.twig' %}

{% block title %}Colbert support - Accueil{% endblock %}

{% block body %}
        <div class="container mt-3">
            <div class="row row-cols-1 row-cols-md-2">
                {% for categorie in  categories %}
                <div class="col mb-3">
                    <div class="card">
                        <img src="{{ asset ('img/img'~loop.index~'.jpg') }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.name }}</h5>
                            <p class="card-text">{{ categorie.description }}</p>
                        </div>
                        <div class="card-footer "><a class="btn btn-primary" href="{{ path('pannes',{'id':categorie.id}) }}" role="button">Link</a></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}
